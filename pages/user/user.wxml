  <view class="page__bd">
        <view class="weui-cells__title">个人信息</view>
            
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">头像</view>
                <view class="weui-cell__ft">
                  <image  class="userinfo-avatar" src="{{user.avatarUrl}}" mode="cover"></image>
                </view>     
            </view>
        </view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">昵称</view>
                <view class="weui-cell__ft">{{user.name}}</view>
            </view>
        </view>
        <view class="weui-cells weui-cells_after-title">
            <view bindtap='roleList' class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__bd">所属角色</view>
                <view class="weui-cell__ft weui-cell__ft_in-access">{{user.role.name}}</view>
            </view>
        </view>

        <view class="weui-cells weui-cells_after-title">
            <view  bindtap='resourceList' class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__bd">拥有权限</view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </view>
          
        </view>

         <view class="weui-cells weui-cells_after-title">
            <view  bindtap='gameList' class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__bd">游戏列表</view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </view>
          
        </view>

  </view>