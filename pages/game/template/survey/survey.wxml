<!-- 全局提示 -->
<i-message id="message" />

<view class='button'>
  <i-row>
    <i-col span="12" i-class="col-class">
      <i-button bind:click="handleClick" type="info" size="small" id="0">按用户</i-button>
    </i-col>
    <i-col span="12" i-class="col-class">
      <i-button bind:click="handleClick" type="success" size="small" id="1">按设备</i-button>
    </i-col>
  </i-row>
</view>

<view class='gameDaily'>
  <i-tab-bar i-class='gameDailyIbutton' current="" color="#1655cc" bindchange="handleGameDaily">
    <i-tab-bar-item key="5" current-icon="homepage_fill" title="游戏概况"></i-tab-bar-item>
  </i-tab-bar>
</view>

<view class='system'>
  <i-tab-bar i-class='ibutton' current="" color="#1655cc" bindchange="handleChangeSystem">
    <i-tab-bar-item key="0" current-icon="homepage_fill" dot="{{true}}" title="All"></i-tab-bar-item>
    <i-tab-bar-item key="1" current-icon="group_fill" title="ANDROID"></i-tab-bar-item>
    <i-tab-bar-item key="2" current-icon="remind_fill" count="" title="IOS"></i-tab-bar-item>
  </i-tab-bar>
</view>

<view class='header' style='width:90%;height:150px'>
  <view class='headerTitle'>
    <i-icon type="switch" size="20" color="#4d80e6" />今日概况</view>
  <swiper indicator-dots="{{indicatorDots}}" easing-function="{{easingFunction}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{swiperView}}" wx:key="{{index}}">
      <swiper-item>
        <view class='swiperView'>
          <i-row>
            <i-col span="8" i-class="col-class">
              <view>{{item.title1}}</view>
              <view>{{item.num1}}</view>
              <view>{{item.time1}}</view>
            </i-col>
            <i-col span="8" i-class="col-class">
              <view>{{item.title2}}</view>
              <view>{{item.num2}}</view>
              <view>{{item.time2}}</view>
            </i-col>
            <i-col span="8" i-class="col-class">
              <view>{{item.title3}}</view>
              <view>{{item.num3}}</view>
              <view>{{item.time3}}</view>
            </i-col>
          </i-row>
        </view>
      </swiper-item>
    </block>
  </swiper>
</view>

<view class='tabBar'>
  <i-tab-bar i-class='itabBar' current="" color="#f759ab" bindchange="handleChange">
    <i-tab-bar-item key="0" icon="homepage" current-icon="homepage_fill" dot="{{true}}" title="今日"></i-tab-bar-item>
    <i-tab-bar-item key="1" icon="group" current-icon="group_fill" title="昨日"></i-tab-bar-item>
    <i-tab-bar-item key="2" icon="remind" current-icon="remind_fill" count="" title="7天"></i-tab-bar-item>
    <i-tab-bar-item key="3" icon="mine" current-icon="mine_fill" title="30天"></i-tab-bar-item>
  </i-tab-bar>
</view>

