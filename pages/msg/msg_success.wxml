<view class="page">
    <view class="weui-msg">
        <view class="weui-msg__icon-area">
            <icon type="success" size="93"></icon>
        </view>
        <view class="weui-msg__text-area">
            <view class="weui-msg__title">操作成功</view>
            <view class="weui-msg__desc">{{msg}}</view>
        </view>
        <view class="weui-msg__opr-area">
            <view class="weui-btn-area">
                <button class="weui-btn" type="primary" bindtap='return'>返回首页</button>
            </view>
        </view>
        
        <view class="weui-msg__extra-area">
            <view class="weui-footer">
                <view class="weui-footer__links">
                    <view class="weui-footer__link">重庆互爱科技</view>
                </view>
                <view class="weui-footer__text">Copyright © 2019-2022</view>
            </view>
        </view>
    </view>
</view>