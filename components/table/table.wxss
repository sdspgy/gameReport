.table-pane {
  width: 100%;
  display: flex;
  height: 20rpx;
  flex-direction: column;
  align-items: center;
}

.table {
  display: flex;
  flex-direction: column;
  align-content: center;
  width: 900px;
  border: 0.5px solid #f0f0f0;
}

.caption {
  color: #495060;
  font-size: 14px;
  font-weight: bold;
  bottom: 20px;
  height: 30px;
  text-align: center;
  line-height: 30px;
}

.tr {
  display: flex;
  flex-direction: row;
  align-content: center;
  background: white;
  color: #495060;
}

.td, .th {
  width: 75px;
  height: 35px;
  font-size: 10px;
  margin: 0 10px;
  text-align: center;
  line-height: 35px;
}

.th {
  font-weight: bold;
}

.bg-g {
  background-color: #fafafa;
}

.row-selected {
  background-color: #5badff;
  color: white;
}