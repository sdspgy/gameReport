<view class="table-pane">
  <view class="caption">{{caption}}</view>
  <scroll-view scroll-x="true" class="table-scroll">
    <view class="table" style="width:{{tableWidth}}px;">
      <view class="tr">
        <view class="th" wx:for="{{titles}}" wx:for-item="value">{{value}}</view>
      </view>
      <view class="tr {{index % 2 == 0?'bg-g':''}} {{crtRow == index?'row-selected':''}}" wx:for="{{data}}" bindtap="onRowTap" data-index="{{index}}">
        <view class="td" wx:for="{{titles}}" wx:for-index="key" wx:for-item="value">{{item[key]}}</view>
      </view>
    </view>
  </scroll-view>
</view>